{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2018",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
